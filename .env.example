# DeWatt Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE (Required)
# ============================================
# MongoDB connection string
# NEVER commit your real connection string to version control!
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Database name
DB_NAME=dewatt

# ============================================
# SOLANA BLOCKCHAIN (Required)
# ============================================
# Solana RPC endpoint
# Devnet: https://api.devnet.solana.com
# Mainnet: https://api.mainnet-beta.solana.com
SOLANA_RPC_URL=https://api.devnet.solana.com

# Treasury wallet secret key (64 numbers in array format)
# Optional - if not set, will use mock signatures
# Example: [1,2,3,4,...,64]
# Get from: solana-keygen new --outfile treasury.json
# Then: cat treasury.json
TREASURY_SECRET_KEY=

# ============================================
# API CONFIGURATION (Optional)
# ============================================
# Public API URL (for client-side)
NEXT_PUBLIC_API_URL=http://localhost:3000

# Admin API key for protected endpoints
# Generate with: openssl rand -hex 32
ADMIN_API_KEY=

# ============================================
# CONTACT FORM (Required for contact functionality)
# ============================================
# Google OAuth2 credentials for sending emails
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://developers.google.com/oauthplayground
GOOGLE_REFRESH_TOKEN=your-refresh-token
SENDER_EMAIL=your-email@gmail.com

# Comma-separated list of email addresses to receive contact form submissions
CONTACT_RECIPIENTS=admin@example.com,support@example.com

# ============================================
# ARCIUM PRIVACY (Optional - for privacy features)
# ============================================
ARCIUM_MXE_ENDPOINT=https://mxe.arcium.com
ARCIUM_API_KEY=your-arcium-api-key
ARCIUM_NETWORK=devnet
ARCIUM_PROGRAM_ID=ArciumPrivacy1111111111111111111111111111111

# ============================================
# FEATURE FLAGS (Optional - defaults to true)
# ============================================
# Enable welcome bonus feature
ENABLE_WELCOME_BONUS=true

# Enable P2P trading feature
ENABLE_P2P=true

# Enable marketplace feature
ENABLE_MARKETPLACE=true

# ============================================
# VALIDATION LIMITS (Optional - has defaults)
# ============================================
# Maximum kWh per charging session
MAX_CHARGING_KWH=1000

# Maximum cost per charging session (USD)
MAX_CHARGING_COST=10000

# Maximum cost per marketplace purchase (EvT tokens)
MAX_MARKETPLACE_COST=1000000

# ============================================
# RATE LIMITING (Optional - has defaults)
# ============================================
# Rate limit window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# Maximum requests per window (default: 20)
RATE_LIMIT_MAX=20

# ============================================
# CACHING (Optional - has defaults)
# ============================================
# Enable response caching
CACHE_ENABLED=true

# Cache TTL in milliseconds (default: 5000 = 5 seconds)
CACHE_TTL=5000

# ============================================
# ENVIRONMENT (Required)
# ============================================
# Application environment: development | production | test
NODE_ENV=development

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================
# Add your external service keys here as needed
# SENTRY_DSN=
# DATADOG_API_KEY=
# CLOUDWATCH_LOG_GROUP=
# SENDGRID_API_KEY=
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=

# ============================================
# IMPORTANT SECURITY NOTES
# ============================================
# 1. NEVER commit .env or .env.local files to version control
# 2. Keep production keys secure and rotate them regularly
# 3. Use different keys for dev/staging/production environments
# 4. Fund treasury wallet with SOL for real blockchain transactions
# 5. Monitor the /api/health endpoint regularly
# 6. Set up proper logging and monitoring in production
# 7. Configure rate limits based on your expected traffic
# 8. Review all API endpoints for proper authentication
